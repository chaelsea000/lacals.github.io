    script.
        $(document).ready(function () {

            crewToggleChangeClass();

            const MOBILE_BREAKPOINT = 1280;

            $('.crewList > li[role="button"]').on('click', function (e) {
                // 모바일에서만 아코디언 동작
                if ($(window).width() < MOBILE_BREAKPOINT) {
                    e.preventDefault();
                    e.stopPropagation();

                    const target = $(this).data('target');
                    $('.crewListDesc.collapse.show').not(target).collapse('hide');
                    $(target).collapse('toggle');
                }
            });

            //collapse transition 시간 고려하여 열림/닫힘 후 함수 호출
            $(document).on('shown.bs.collapse hidden.bs.collapse', '.crewListDesc.collapse', function () {
                crewToggleChangeClass();
            });
        
            //리사이즈시
            $(window).on('resize', function () {
                crewToggleChangeClass();
            });

        });

        // 열린 패널이 1개라도 있으면 .crew에 change 부여
        function crewToggleChangeClass() {
            const hasOpened = $('.crewListDesc.collapse.show').length > 0;
            $('.crew').toggleClass('change', hasOpened);
        }

